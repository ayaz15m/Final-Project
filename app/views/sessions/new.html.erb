<div id="entire">
  <%= form_tag verify_path, :id => 'form' do %>
    <fieldset>
      <label>Sign In!</label>
    </fieldset>
    <div class="container">
      <div>
        <%= label_tag :email %>
        <%= text_field_tag :email, "", class: "form-control" %>
      </div>
      <div>
        <%= label_tag :password %>
        <%= password_field_tag :password, "", class: "form-control" %>
      </div>
      <div>
        <%= submit_tag "Sign In", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
  <p>If you don't have a login, <%= link_to "Sign Up"%></p>
  </div>
</div>
